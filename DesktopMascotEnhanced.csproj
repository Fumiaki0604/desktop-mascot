<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <AssemblyTitle>Desktop Mascot Enhanced</AssemblyTitle>
    <AssemblyDescription>Enhanced Gizmodo RSS Desktop Mascot with Image Support</AssemblyDescription>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <Copyright>Â© 2024 Desktop Mascot Enhanced</Copyright>
